{
  "name": "migglet_api",
  "private": true,
  "version": "0.9.0",
  "type": "module",
  "scripts": {
    "start": "cross-env NODE_ENV=pro node ./bin/www",
    "dev": "cross-env NODE_ENV=dev node --watch ./bin/www",
    "test": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest",
    "reset-data-base": "cross-env NODE_ENV=dev NODE_OPTIONS=--experimental-vm-modules jest --testMatch=**/reset.js"
  },
  "dependencies": {
    "@tinyhttp/app": "2.0.29",
    "@tinyhttp/cors": "2.0.0",
    "bcrypt": "5.0.1",
    "body-parser": "1.20.2",
    "dotenv": "16.0.3",
    "jsonwebtoken": "9.0.0",
    "mongoose": "7.0.3"
  },
  "devDependencies": {
    "jest": "29.6.1",
    "supertest": "6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "verbose": true,
    "testTimeout": 30000,
    "detectOpenHandles": true,
    "forceExit": true
  }
}